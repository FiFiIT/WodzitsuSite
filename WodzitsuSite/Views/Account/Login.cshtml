@model LoginViewModel
@{
	ViewBag.Title = "Login";
}
@section Scripts {
	<script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
	<div class="col-md-4 offset-md-4">
		<h2>@ViewBag.Title</h2>
		<form method="post">
			<div asp-validation-summary="ModelOnly"></div>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
					<input placeholder="Username"  asp-for="Username" class="form-control" />
					<span asp-validation-for="Username" class="text-warning"></span>
				</div>
				<div class="input-group">
					<span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
					<input placeholder="Passwoerd" asp-for="Password" type="password" class="form-control" />
					<span asp-validation-for="Password" class="text-warning"></span>
				</div>
				<div class="form-group">
					<div class="form-check">
						<input asp-for="RemeberMe" type="checkbox" class="form-check-input" />
						<label asp-for="RemeberMe" class="form-check-label">Remeber Me?</label>
						<span asp-validation-for="RemeberMe" class="text-warning"></span>
					</div>
				</div>
				<div class="form-group">
					<input type="submit" value="Login" class="btn btn-success" />
				</div>
		</form>
	</div>
</div>