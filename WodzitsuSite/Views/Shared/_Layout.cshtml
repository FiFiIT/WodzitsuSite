<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
	<link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/node_modules/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
	<link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-dark bg-dark navbar-expand-xl">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" asp-controller="App" asp-action="Index">Wódzitsu</a>
				</div>
				<button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div id="theMenu" class="navbar-collapse collapse">
					<ul class="navbar-nav">
						<li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
						<li class="nav-item"><a class="nav-link" asp-controller="App" asp-action="Wakacje">Wakacje</a></li>
					</ul>
					<ul class="navbar-nav ml-auto">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Wyloguj</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Manage">Zarządzaj</a></li>
						}
						else
						{
							<li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Zaloguj</a></li>
						}
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<section>
		@RenderBody()
	</section>

	@*<script src="~/node_modules/jquery/dist/jquery.min.js"></script>*@
	<script src="~/node_modules/jquery/dist/jquery.js"></script>
	<script src="~/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@RenderSection("Scripts", false)
</body>
</html>
